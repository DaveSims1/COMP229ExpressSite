<%- include ('../partials/header.ejs') %>

<%- include ('../partials/main_nav.ejs') %>

<!--Edit page Content-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>

        <form class="form" method="POST">
            <div class="form-group">
                <label for="nameTextField">Contact Name</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter Contact Name"
                name="name"
                value="<%= contact.name%>"
                required>
            </div>

            <div class="form-group">
                <label for="emailTextField">Contact Email</label>
                <input type="text" class="form-control"
                id="emailTextField"
                placeholder="Enter Contact Email"
                name="email"
                value="<%= contact.email%>" 
                required>
            </div>

            <div class="form-group">
                <label for="phoneTextField">Contact Phone Number</label>
                <input type="text" class="form-control"
                id="phoneTextField"
                placeholder="Enter Contact Phone Number"
                name="phone" 
                value="<%= contact.phone%>"
                required>
            </div>

            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i>Submit</button>
            
                <a href="/businesscontacts" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>


        </form>

        </div>
    </div>
</div>






<%- include ('../partials/bottom_nav.ejs') %>

