<%- include ('../partials/header.ejs') %>

<%- include ('../partials/main_nav.ejs') %>
  <!---->

  <main class="container">
    <div class = "row">
      <div class="offset-md-1 col-md-10">
        <h1><%= title %></h1>
        <a href="add" class="btn btn-primary" role="button">
        <i class="fas fa-plis-circle"></i> Add a Contact</a>
        <br>
        <table class="table table-bordered table-striped table-hover">
          <!--Header Row-->
          <tr>
            <th class="text-center">Name</th>
            <th class="text-center">E-mail</th>
            <th class="text-center">Phone Number</th>
            <th class="text-center col-1"></th>
            <th class="text-center col-1"></th>
          </tr>

          <!--Repeatable Template-->
          <% items.forEach(item => { %>
            <tr>
              <td class="text-center"><%= item.name %></td>
              <td class="text-center"><%= item.email %></td>
              <td class="text-center"><%= item.phone %></td>
              <td class="text-center col-1">
                <a href="edit/<%= item._id %>" class="btn btn-primary btn-sm">
                <i class="fas fa-pencil alt">Edit</i></a>
              </td>
              <td class="text-center col-1">
                <a href="delete/<%= item._id %>" class="btn btn-danger btn-sm">
                <i class="fas fa-trash-alt">Delete</i></a>
              </td>
            </tr>    
            <% }); %>


         


        </table>
      </div>
    </div> 
  </main>

  <%- include ('../partials/bottom_nav.ejs') %>

  <%- include ('../partials/footer.ejs') %>

